<%= notice %>
<%= form_for @equipment do |f| %>
  <%= f.label :serial_number, 'Número de Série' %>
  <%= f.text_field :serial_number %>

  <%= f.label :replacement_value, 'Valor de Aquisição' %>
  <%= f.text_field :replacement_value %>

  <%= f.label :name, 'Nome' %>
  <%= f.text_field :name %>

  <%= f.label :description, 'Descrição' %>
  <%= f.text_field :description %>

  <%= f.label :acquisition_date, 'Data de Aquisição' %>
  <%= f.text_field :acquisition_date %>

  <%= f.label :usage_limit, 'Vida Útil' %>
  <%= f.text_field :usage_limit %>

  <%= f.label :image, 'Foto' %>
  <%= f.text_field :image %>

  <%= f.label :category, 'Tipo de Equipamento' %>
  <%= f.text_field :category %>

  <%= f.label :manufacturer, 'Fabricante' %>
  <%= f.text_field :manufacturer %>

  <%= f.label :supplier, 'Fornecedor' %>
  <%= f.text_field :supplier %>

  <%= f.submit 'Cadastrar Equipamento' %>

<% end %>
