<!DOCTYPE html>
<html>
  <head>
    <title>EquipLoc</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="col-sm-3">
        <div class="list-group">
          <a href="#" class="list-group-item active">
            Menu
          </a>
          <%= link_to 'Cadastrar cliente', new_customer_path, class: "list-group-item" %>
          <%= link_to 'Cadastrar equipamento', new_equipment_path, class: "list-group-item" %>
          <%= link_to 'Solicitar orçamento', new_proposal_path, class: "list-group-item" %>
          <%= link_to 'Cadastrar preços', new_price_path, class: "list-group-item" %>
          <%= link_to 'Cadastrar contrato', new_contract_path, class: "list-group-item" %>

        </div>
      </div>
      <div class="col-sm-9">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
