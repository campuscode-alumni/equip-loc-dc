<%= flash[:error]%>
<h1>Novo Orçamento</h1>
<%= form_for @proposal do |f|%>
  <div class="form-group">
    <%= f.label :name,'Nome' %>
    <%= f.text_field :name%>
  </div>
  <div class="form-group">
    <%= f.label :email,'Email' %>
    <%= f.text_field :email%>
  </div>
  <div class="form-group">
    <%= f.label :message,'Mensagem' %>
    <%= f.text_area :message%>
  </div>
  <%=f.submit 'Enviar Solicitação', class: 'btn btn-primary'%>
<%end%>
