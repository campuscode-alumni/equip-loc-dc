<%=flash[:error]%>
<h1>Novo Contrato</h1>
<%= form_for @contract do |f| %>
  <div class="form-group">
    <%= f.label :customer_id, 'Cliente' %>
    <%= f.collection_select(:customer_id, @customers, :id, :name) %>
  </div>
  <div class="form-group">
    <%= f.label :delivery_address, 'Endereço de Entrega' %>
    <%= f.text_field :delivery_address%>
  </div>

  <div class="information">
    <%= f.collection_check_boxes(:equipment_ids, @equipment, :id, :name) %>
  </div>
  <div class="form-group">
    <%= f.label :rental_period, 'Prazo de Locação' %>
    <%= f.select(:rental_period, options_for_select([['5 dias', 5], ['10 dias', 10], ['15 dias', 15], ['20 dias', 20], ['25 dias', 25], ['30 dias', 30]]))%>
  </div>

  <div class="form-group">
    <%= f.label :discount, 'Desconto' %>
    <%= f.text_field :discount%>
  </div>

  <div class="form-group">
    <%= f.label :payment_method, 'Forma de Pagamento' %>
    <%= f.text_field :payment_method%>
  </div>

  <div class="form-group">
    <%= f.label :start_date, 'Data de Início' %>
    <%= f.date_field :start_date%>
  </div>

  <div class="form-group">
    <%= f.label :contact, 'Responsável' %>
    <%= f.text_field :contact%>
  </div>
  <div class="form-group">
    <%= f.submit 'Emitir Contrato', class: 'btn btn-primary' %>
  </div>

<% end %>
